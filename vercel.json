{
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/static/index.html"
    },
    {
      "src": "/cliente",
      "dest": "/static/cliente.html"
    },
    {
      "src": "/funcionario",
      "dest": "/static/funcionario.html"
    },
    {
      "src": "/servicos",
      "dest": "/static/servicos.html"
    },
    {
      "src": "/sobre",
      "dest": "/static/sobre.html"
    },
    {
      "src": "/funcionario/pedidos",
      "dest": "/static/funcionario_pedidos.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://web-production-5220.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/static/$1"
    }
  ]
} 